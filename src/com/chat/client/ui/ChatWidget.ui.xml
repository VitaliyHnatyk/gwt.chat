<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            flex: auto;
            height: 100%;
            display: flex;
            width: 100%;
            flex-direction: row;
        }

        .center {
            flex: auto;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .messBox {
            flex: auto;
            position: relative; min-height: 200px;
        }

        .inputBox {
            height: 80px;
        }

        .right {
            width: 300px;
        }


    </ui:style>
    <ui:with field="res" type='com.chat.client.bundels.Resources' />
    <g:HTMLPanel addStyleNames="{style.main}">
        <div class="{style.center}">
            <div class="{style.messBox}">
                <g:TextArea addStyleNames="{res.basic.formControl} {res.basic.textArea}"  readOnly="true"/>
            </div>
            <div class="{style.inputBox}">
                <g:TextBox addStyleNames="{res.basic.formControl}"/>
            </div>
        </div>
        <div class="{style.right}">
            <g:List  addStyleNames="{res.basic.formControl}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>