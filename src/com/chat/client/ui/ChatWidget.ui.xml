<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.main {
			flex: auto;
			height: 100%;
			display: flex;
			width: 100%;
			flex-direction: row;
		}

		.center {
			flex: auto;
			width: 100%;
			display: flex;
			flex-direction: column;
		}

		.messBox {
			flex: auto;
			position: relative;
			min-height: 200px;
		}

		.inputBox {
			height: 80px;
		}

		.right {
			width: 300px;
		}


	</ui:style>
	<ui:with field="res" type='com.chat.client.bundels.Resources'/>
	<g:HTMLPanel addStyleNames="{style.main}">
		<div class="{style.center}">
			<div class="{style.messBox}">
				<g:ScrollPanel ui:field="scrollPanel"
				               addStyleNames="{res.basic.textArea}"
					>
					<g:HTML ui:field="messagesHtml"></g:HTML>
				</g:ScrollPanel>
			</div>
			<div class="{style.inputBox}">
				<g:TextBox ui:field="messageForm"
				           addStyleNames="{res.basic.formControl}"/>
				<g:Button ui:field="sendButton"
				          text="Send"
				          addStyleNames="{res.basic.btn} {res.basic.btnPrimary}"/>
			</div>
		</div>
		<div class="{style.right}">
			<g:ListBox addStyleNames="{res.basic.formControl}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>