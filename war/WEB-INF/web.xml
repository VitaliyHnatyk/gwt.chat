<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

	<servlet>
		<servlet-name>com.chat.Chat ChatService</servlet-name>
		<servlet-class>com.chat.server.ChatRoomServiceImpl</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>com.chat.Chat ChatService</servlet-name>
		<url-pattern>/chat/chat</url-pattern>
	</servlet-mapping>

    <servlet>
        <servlet-name>webSocket</servlet-name>
        <servlet-class>com.chat.server.ChatSocketServletImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>webSocket</servlet-name>
        <url-pattern>/chat/ws</url-pattern>
    </servlet-mapping>
</web-app>
