<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

	<servlet>
		<servlet-name>com.chat.Chat ChatService</servlet-name>
		<servlet-class>com.chat.server.ChatServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>chatComet</servlet-name>
		<servlet-class>net.zschech.gwt.comet.server.CometServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>com.chat.Chat ChatService</servlet-name>
		<url-pattern>/chat/chat</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>chatComet</servlet-name>
		<url-pattern>/chat/comet</url-pattern>
	</servlet-mapping>
</web-app>
